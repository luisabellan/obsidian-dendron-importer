{
  "name": "obsidian-dendron-importer",
  "displayName": "Obsidian Dendron Importer",
  "description": "Import Obsidian vaults into Dendron workspace with automatic conversion from folder structure to dot-notation hierarchy",
  "icon": "obsidiantodendron.png",
  "version": "1.0.2",
  "publisher": "luisabellan",
  "author": "Luis Abellan <luis.abellan.dev@gmail.com> (https://luisabellan.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/luisabellan/obsidian-dendron-importer.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "dendron",
    "obsidian",
    "import",
    "notes",
    "markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "obsidianDendronImporter.importVault",
        "title": "Import Obsidian Vault",
        "category": "Dendron",
        "icon": "$(folder-opened)"
      },
      {
        "command": "obsidianDendronImporter.selectVaultFolder",
        "title": "Select Obsidian Vault Folder",
        "category": "Dendron",
        "icon": "$(file-directory)"
      }
    ],
    "configuration": {
      "title": "Obsidian Dendron Importer",
      "properties": {
        "obsidianDendronImporter.defaultImportPath": {
          "type": "string",
          "default": "",
          "description": "Default path for importing Obsidian vaults"
        },
        "obsidianDendronImporter.preserveMetadata": {
          "type": "boolean",
          "default": true,
          "description": "Preserve Obsidian YAML frontmatter during import"
        },
        "obsidianDendronImporter.convertWikiLinks": {
          "type": "boolean",
          "default": true,
          "description": "Convert Obsidian [[wikilinks]] to Dendron format"
        },
        "obsidianDendronImporter.flattenHierarchy": {
          "type": "boolean",
          "default": true,
          "description": "Convert folder hierarchy to dot-notation filenames"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "obsidianDendronImporter.importVault",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "obsidianDendronImporter.selectVaultFolder",
          "when": "workspaceFolderCount != 0"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:obsidianDendronImporter.importVault",
    "onCommand:obsidianDendronImporter.selectVaultFolder"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.26.0",
    "webpack": "^5.92.1"
  }
}
